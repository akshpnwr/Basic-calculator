*{margin:0;padding:0;box-sizing:border-box}body{height:100vh;background:#51f7ed;background:linear-gradient(90deg,#51f7ed,#2835c1)}.calculator-grid{display:grid;height:100vh;justify-content:center;align-content:center}.output-section{height:150px;width:400px;background:#616060;background:linear-gradient(90deg,#616060,#0a0a0e);padding:1.5em 1em;display:flex;flex-direction:column;align-items:flex-end;justify-content:space-between;border-bottom:1px solid #fff;word-wrap:break-word;word-break:break-all}.previous-operand{color:#d3d2d2;font-size:1.5rem}.current-operand{color:#ece8e8;font-size:2.5rem}.input-section{display:grid;grid-template-columns:repeat(4,1fr)}.calculator-grid button{outline:none;border:1px solid #fff;font-size:1.5rem;padding:.8em;background-color:rgba(190,255,252,.9)}.calculator-grid button:hover{background-color:hsla(0,0%,100%,.95)}.span-two{grid-column:span 2}.surprise{position:absolute;top:50%;left:50%;transform:translate(-50%,-50%);z-index:1;max-width:100%}.surprise img{min-width:600px;min-height:500px;width:100%}.close-surprise{outline:none;border:none;background-color:transparent;color:#fff;font-size:3rem;position:absolute;right:0;margin-right:.2em}.hidden{display:none}.overlay{height:100vh;width:100%;background-color:#000;opacity:.5;position:absolute;top:0;left:0}
